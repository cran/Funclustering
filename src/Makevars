FUNCLUSTERINGDIR = ./Funclustering/
FUNCLUSTERINGLIB = $(FUNCLUSTERINGDIR)libFunclustering.a
PKG_CPPFLAGS = -DRPACKAGE
PKG_CXXFLAGS = $(SHLIB_OPENMP_CXXFLAGS)
PKG_LIBS = $(SHLIB_OPENMP_CXXFLAGS) -L$(FUNCLUSTERINGDIR) -lFunclustering 
 
.PHONY: all Funclustering

all: $(SHLIB)
$(SHLIB): Funclustering


Funclustering:
	(cd $(FUNCLUSTERINGDIR) && $(MAKE))
	$(RANLIB) $(FUNCLUSTERINGLIB)
